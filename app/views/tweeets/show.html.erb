<div class="columns is-centered">
<div class="column is-4 ">
<article class="media box ml-6">
<%= simple_form_for(@tweeet) do |f|%>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%=f.input :tweeet, label: "Tweeet about it",:disabled => true,input_html: { class:"textarea"},wrapper: false,label_html: {class:"label"},placeholder: "Compose a new tweeet..." %>
    </div>
  </div>

<%= link_to "Edit this tweeet", edit_tweeet_path(@tweeet),class:"button is-info decoration-off"  %> 
   <%= link_to "Back to tweeet", tweeets_path,class:"button is-info decoration-off" %>

  <%= button_to "Destroy ", @tweeet, method: :delete ,class:"button is-info"%>
<% end %>
</article>
</div>
</div>
